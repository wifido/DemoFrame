	<appender name="tag" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="./logs/sfapp-user.log" />
		<param name="Append" value="true" />
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%p] %-d{yyyy-MM-dd HH:mm:ss} [%c][%L]- %m%n" />
		</layout>
	</appender>
	
	<logger name="tag" additivity="false">  
       <level value="info" />
       <appender-ref ref="tag" />  
    </logger>


	<root>
		<priority value="info" />
		<!-- <appender-ref ref="console" /> -->
		<appender-ref ref="tag" />
	</root>

</log4j:configuration>